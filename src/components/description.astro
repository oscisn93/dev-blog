---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { project } = Astro.props;
---

<div class="col-span-4 bg-slate-200 bg-opacity-35 rounded rounded-md">
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-gray-400">{project.name}</h4><p
        class="mt-3 text-3xl font-bold text-black md:text-2xl">
        {
          project.category
        }
      </p>
    </div><ul class="grid mt-8 text-left gap-y-4">
      {
        project.features.map((item) => (
          <li class="flex items-start gap-3 text-gray-800">
            <Tick class="w-6 h-6" />
            <span>{item}</span>
          </li>
        ))
      }
    </ul><div class="flex mt-8">
      <Link
        href={project.button.link || "#"}
        block
        style={project.completed ? "primary" : "outline"}>
        {project.button.text || "Get Started"}
      </Link>
    </div>
  </div>
</div>
