---
import Container from "@components/container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Projects",
    path: "/project",
  },
  {
    title: "About",
    path: "/about",
  },
  // {
  //   title: "Blog",
  //   path: "/blog",
  // },
  // {
  //   title: "Contact",
  //   path: "/contact",
  // },
];
---

<Container>
  <header class="flex flex-col md:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full md:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <span class="font-bold text-4xl"
            >Big<span class="font-extrabold text-slate-400">O</span></span
          >
        </a>
        <div class="block sm:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full md:w-auto mt-2 md:flex md:mt-0">
        <ul class="flex flex-col md:flex-row md:gap-3">
          {
            menuitems.map((item) => (
              <li>
                <a
                  href={item.path}
                  class="flex md:px-3 py-2 text-gray-400 font-semibold hover:text-white">
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
    <div></div>
    <div></div>
  </header>
</Container>
